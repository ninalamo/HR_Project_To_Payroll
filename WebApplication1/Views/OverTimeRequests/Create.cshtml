@model CreateOverTimeRequestViewModel

@{
    ViewData["Title"] = "Create";
}

    <div class="row justify-content-center p-5">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-success text-center">
                    <h6 class="card-title text-white">Create Overtime Request</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ShiftDate" class="control-label"></label>
                            <input type="date" asp-for="ShiftDate" class="form-control" />
                            <span asp-validation-for="ShiftDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TimeStart" class="control-label"></label>
                            <input type="time" asp-for="TimeStart" class="form-control" />
                            <span asp-validation-for="TimeStart" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TimeEnd" class="control-label"></label>
                            <input type="time" asp-for="TimeEnd" class="form-control" />
                            <span asp-validation-for="TimeEnd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Classification" class="control-label"></label>
                            <select asp-for="Classification" class="form-control">
                                <option value="Regular OT">Regular OT</option>
                                <option value="Early OT">Early OT</option>
                            </select>
                            <span asp-validation-for="Classification" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Purpose" class="control-label"></label>
                            <textarea asp-for="Purpose" class="form-control" rows="4" ></textarea>
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="btn-group btn-block" role="group" aria-label="Basic example">
                                <input type="submit" value="Create" class="btn btn-outline-success" />
                                <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
         
        </div>
       
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
