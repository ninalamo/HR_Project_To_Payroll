@model HR.Application.cqrs.Employee.Queries.GetEmployeesResponse;

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-sm btn-outline-success" asp-action="Create">Create New</a>
</p>
<div class="card">
    <div class="card-header bg-success text-white">
        <h6>Employee List</h6>
    </div>
    <div class="card-body">
        <table class="table table-striped table-borderless">
        <thead>
            <tr>
                <th>
                    Employee Number
                </th>
                <th>
                    First Name
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Company Email
                </th>
                <th>
                    Personal Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalEmail)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeID">Update</a> |
                        @*<a asp-action="Details" asp-route-id="@item.EmployeeID">Details</a>*@ 
                        <a asp-action="Delete" asp-route-id="@item.EmployeeID">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>

