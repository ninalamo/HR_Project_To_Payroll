@model HR.Application.cqrs.Employee.Queries.GetEmployeesResponse;

@{
    ViewData["Title"] = "Index";
}

<p class="">
    <a class="btn btn-success" asp-action="Create">Add Employee</a>
</p>
<div class="card shadow">
    <div class="card-header bg-success text-white">
        <h6>Employee List</h6>
    </div>
    <div class="card-body">
        <table class="table table-striped table-borderless" id="employee">
        <thead>
            <tr>
                <th>
                    Employee Number
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Company Email
                </th>
                <th>
                    Personal Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PersonalEmail)
                    </td>
                    <td class="btn-group float-right">
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.EmployeeID" title="Edit"><i class="fa fa-edit"></i></a> 
                        <a class="btn btn-outline-info" asp-action="DailyTimeRecord" asp-route-id="@item.EmployeeID" title="View DTR"><i class="fa fa-print"></i></a> 
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.EmployeeID" title="Remove"><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        </table>
    </div>
</div>

