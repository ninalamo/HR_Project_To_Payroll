@page
@model RegisterModel
@{
     Layout = "/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Register";
}


<div class="row justify-content-center p-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-gradient-success">
                <h4 class="card-title text-center text-white">Create a new account.</h4>
            </div>
            <div class="card-body">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <p>Note: You must be an employee. Please use your registered email as user name.</p>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="btn-group btn-block" role="group" aria-label="Basic example">
                            <input type="submit" value="Register" class="btn btn-outline-success" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                        </div>
                    </div>
                    
                </form>
            </div>
            
        </div>
        
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
